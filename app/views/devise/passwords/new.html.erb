<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'card' }) do |f| %>
  <div class="card-body p-6">
    <div class="card-title">Forgot your password?</div>
    <div class="form-group">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, autofocus: true, placeholder: 'Enter email', autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="form-footer">
      <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>

<div class="text-center text-muted">
  Don't have account yet? <%= link_to('Sign up', new_user_registration_path) %>
</div>
