<%= form_for(@invitation_form, url: admin_users_path, html: { class: 'card'} ) do |f| %>
  <div class="card-body p-6">

    <div class="form-group">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, placeholder: 'Enter email', autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="form-footer">
      <%= f.submit "Invite", class: "btn btn-primary btn-block", data: { disable: true } %>
    </div>
  </div>
<% end %>
