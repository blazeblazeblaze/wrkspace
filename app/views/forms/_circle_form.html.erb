<%= form_for [:contacts, contact] do |f| %>
  <div class="card-header">
    <h3 class="card-title">Circles</h3>
  </div>
  <div class="card-body">
    <div class="form-group">
      <div class="selectgroup selectgroup-pills">
        <%= f.collection_check_boxes(:circle_ids, current_account.circles, :id, :title) do |f_circle| %>
          <%= f_circle.label(class: 'selectgroup-item') do %>
            <%= f_circle.check_box(class: 'selectgroup-input') %>
            <span class="selectgroup-button"><%= f_circle.text %></span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="card-footer text-right">
    <%= f.submit "Save changes", class: 'btn btn-primary' %>
  </div>
<% end %>
