<div class="col-lg-8">
  <%= form_for @circle, html: { class: "card" } do |f| %>
  <div class="card-body">
    <h3 class="card-title"><%= action_name.capitalize %> circle</h3>
    <div class="row">
      <div class="col-sm-12 col-md-12">
        <div class="form-group">
          <label class="form-label">Title</label>
          <%= f.text_field :title, class: 'form-control', placeholder: 'Circle name' %>
        </div>
      </div>
    </div>
    <div class="card-footer text-right">
      <%= f.submit "Save circle", class: 'btn btn-primary' %>
    </div>
  </div>
  <% end %>
</div>
