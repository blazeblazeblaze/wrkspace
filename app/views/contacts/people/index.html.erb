<div class="container">
  <div class="page-header">
    <h1 class="page-title">
      People
    </h1>
  </div>

  <div class="row row-cards">
    <div class="col-lg-3 order-lg-1 mb-4">
      <%= link_to new_contacts_person_path, class: "btn btn-block btn-primary mb-6" do %>
        Add new
      <% end %>
      <div class="card">
        <%= form_for :person_search, method: :get do |f| %>
          <div class="card-header">
            <h3 class="card-title">Filter results</h3>
          </div>
          <div class="card-body">
            <fieldset class="form-fieldsetx">
              <div class="form-group">
                <label class="form-label">Name</label>
                <%= f.text_field :name, value: @search[:name], class: "form-control" %>
              </div>
              <div class="form-group">
                <label class="form-label">Organization</label>
                <%= f.collection_select :organization_id, @current_account.organizations, :id, :name, { include_blank: "Select a company", selected: @search[:organization_id] }, { class: 'form-control custom-select'} %>
              </div>
              <div class="form-group">
                <label class="custom-switch">
                  <input type="checkbox" name="custom-switch-checkbox" class="custom-switch-input">
                  <span class="custom-switch-indicator"></span>
                  <span class="custom-switch-description">Include inactive</span>
                </label>
              </div>
            </fieldset>
          </div>
          <div class="card-footer text-right">
            <div class="d-flex">
              <a href="javascript:void(0)" class="btn btn-link">Cancel</a>
              <%= f.submit 'Submit', class: "btn btn-primary ml-auto" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-9">
      <%= render 'layouts/messages'%>
      <div class="card">
        <div class="table-responsive">
          <table class="table table-hover table-outline table-vcenter text-nowrap card-table">
            <thead>
              <tr>
                <th class="text-center w-1"><i class="icon-people"></i></th>
                <th>User</th>
                <th>Organization</th>
                <th>Activity</th>
                <th class="text-right"><i class="icon-settings"></i></th>
              </tr>
            </thead>
            <tbody>
              <% @people.each do |person| %>
                <tr>
                  <td class="text-center">
                    <div class="avatar d-block" style="background-image: url(<%= Faker::Avatar.unique.image %>)"/>
                  </td>
                  <td>
                    <div>
                      <%= link_to "#{person.first_name} #{person.last_name}", contacts_person_path(person) %>
                    </div>
                    <div class="small text-muted">
                      <%= person.job_title %>
                    </div>
                  </td>
                  <td>
                    <% if person.organization %>
                      <%= link_to person.organization.name, contacts_organization_path(person.organization) %>
                    <% end %>
                  </td>
                  <td>
                    <div class="small text-muted">Registered</div>
                    <div><%= pretty_date(person.created_at) %></div>
                  </td>
                  <td class="text-right">
                    <%= link_to 'Manage', edit_contacts_person_path(person), class: "btn btn-secondary btn-sm" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
