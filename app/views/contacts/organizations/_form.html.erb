<div class="col-lg-8">
  <%= form_for [:contacts, @organization], html: { class: "card" } do |f| %>
  <div class="card-body">
    <h3 class="card-title">Edit Organization</h3>
    <div class="row">
      <div class="col-sm-12 col-md-12">
        <div class="form-group">
          <label class="form-label">Name</label>
          <%= f.text_field :name, class: 'form-control', placeholder: 'Organization name' %>
        </div>
      </div>
    </div>
    <div class="card-footer text-right">
      <%= f.submit "Save organization", class: 'btn btn-primary' %>
    </div>
  </div>
  <% end %>
</div>
